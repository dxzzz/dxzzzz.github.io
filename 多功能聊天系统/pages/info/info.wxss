
.pageContainer{
  width:100%;
  height:100%;
  background-color: gainsboro;
}

.clear{
  clear:both;
}

.chat_title{
    font-size: 20px;
     font-family: "Microsoft Yahei";
    color: black;
    text-align: center
}

.topArea{
  width:100%;
  padding-bottom:110px;
  background-color: #F0F0F0;
}

.selfMessage{
  float:right;
  width:100%;
  text-align: right;
  padding-top: 5px;
}

.otherMessage{
  float:left;
  width:100%;
  padding-top: 5px;
}

.selfMessage .nameInfo{
  font-size: 15px;
  width:100%;
  color:#FF5151;
}

.otherMessage .nameInfo{
  font-size: 15px;
  color: cornflowerblue;
  width:100%;
}


.detailMessage{
  font-size: 13px;
  width:100%;
}

.bottomArea{
  width:100%;
  position:fixed;
  bottom:0px;
  border-top: 1px solid #333333;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap
}

.inputArea{
  text-align:center;
  width:150%;
  font-size:16px;
}

.message{
  background-color: white;
  color: cornflowerblue;
  width:95%;
  padding-left: 5%;
  height: 45px;
}

.sendButton{
  position: absolute;
  top: 3px;
  right: 0px;
  height: 40px;
  font-size: 16px;
  width:20%;
  color: #333333;
}